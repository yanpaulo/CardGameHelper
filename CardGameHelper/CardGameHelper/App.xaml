<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CardGameHelper.App"
             xmlns:converters="clr-namespace:CardGameHelper.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Application resource dictionary -->
            <converters:NegatedValueConverter x:Key="NegatedValueConverter"></converters:NegatedValueConverter>
            <converters:IntToBoolValueConverter x:Key="IntToBoolValueConverter"></converters:IntToBoolValueConverter>
            <converters:ReverseIntToBoolValueConverter x:Key="ReverseIntToBoolValueConverter"></converters:ReverseIntToBoolValueConverter>
            <converters:IntGreaterThanValueConverter x:Key="IntGreaterThanValueConverter"></converters:IntGreaterThanValueConverter>
        </ResourceDictionary>
    </Application.Resources>
</Application>